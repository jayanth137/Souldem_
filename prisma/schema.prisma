generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


// src/db/schema.prisma

// Define your database tables and relationships here
model Proposal {
  id          Int      
  title       String
  description String
  createdAt   DateTime  @default(now())
  votes       Vote[]
}

model Vote {
  id         Int    
  userId     Int
  proposalId Int
  proposal   Proposal @relation(fields: [proposalId], references: [id])
}

model Signature {
  id         Int     
  userId     Int

}


